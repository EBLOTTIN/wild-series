{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>Saisons :
				{% for saison in program.saisons %}
					<p>Saison :
						{{ saison.number }}</p>
					<p>Description de la saison
						{{ saison.number }}:
						{{ saison.description }}</p>
					<a href="{{ path("program_season_show", {programId: program.id, seasonId: saison.id})}}">Voir les informations sur la saison</a>

				{% endfor %}
			</p>
		</p>
	</div>
</div>
<a href="{{ path('program_index') }}">
	Retour à la liste des programmes
</a>{% endblock %}
