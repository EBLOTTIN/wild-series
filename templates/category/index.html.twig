{% extends 'base.html.twig' %}
{% block title %}All Categories
{% endblock %}
{% block body %}
	<h1>Toutes les catégories</h1>
	{% for category in categories %}
		<div>
			<ul>{{ loop.index }}
				.
				{{ category.name }}
			</ul>
			<a href="{{ path("category_show", { categoryName: category.name }) }}">Allez voir la catégorie</a>
		</div>
	{% else %}
		Acune catégories trouvées
	{% endfor %}
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
